{
	"search.exclude": {
		"export/**/*.hx": true,
		"docs/*": true,
		"README.md": true,
		"LICENSE.md": true,
		"assets/data/_eggs/*": true
	},
	"[haxe]": {
		"editor.formatOnSave": true,
		"editor.formatOnPaste": true,
		"editor.codeActionsOnSave": {
			"source.sortImports": true
		}
	},
	"haxe.enableExtendedIndentation": true,
	"files.exclude": {
		"art/": true,
		"export/": true,
		".haxelib/": true,
		"assets/data/_levels/": true,
		"assets/levels.ogmo": true
	},
	"[json]": {
		"editor.formatOnSave": true,
		"editor.formatOnPaste": true
	}
}