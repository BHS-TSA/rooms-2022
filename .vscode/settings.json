{
	"search.exclude": {
		"export/**/*.hx": true,
		"docs/*": true,
		"README.md": true
	},
	"[haxe]": {
		"editor.formatOnSave": true,
		"editor.formatOnPaste": true,
		"editor.codeActionsOnSave": {
			"source.sortImports": true
		}
	},
	"haxe.enableExtendedIndentation": true,
	"files.exclude": {
		"art/": true,
		"export/": true,
		".haxelib/": true
	}
}